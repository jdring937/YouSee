        </Grid.ColumnDefinitions>

        <!-- For full screen button -->
        <!--<Button Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="1" Text="▼" BackgroundColor="#ffc32b"></Button>-->

        <!-- For half screen buttons -->
        <Button x:Name="btnCreate" Grid.Column="0" Grid.Row="3" Text="Create" TextColor="White" BackgroundColor="Red"></Button>
        <Button x:Name="btnJoin" Grid.Column="1" Grid.Row="3" Text="Join" TextColor="White" BackgroundColor="Red"></Button>
