<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:YouSee"
             x:Class="YouSee.MainPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="3.333*"></RowDefinition>
            <RowDefinition Height="3.333*"></RowDefinition>
            <RowDefinition Height="3.333*"></RowDefinition>
        </Grid.RowDefinitions>

        <StackLayout Grid.Row="1">
            <Label x:Name="txtLat" Text="Latitude: "></Label>
            <Label x:Name="txtLong" Text="Longitude: "></Label>
            <Button x:Name="btnGetLocation" Text="Get Lat/Long"></Button>
        </StackLayout>
        
    </Grid>

</ContentPage>
