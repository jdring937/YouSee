<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="YouSee.NameScreen">

    <StackLayout Spacing="20" Padding="20" VerticalOptions="Center">
        <Button x:Name="btnUsername" Text="Create a Username" BackgroundColor="Red" TextColor="Black"></Button>
        <Entry x:Name="entryName" Placeholder="Username" ></Entry>
        <Entry x:Name="entryPassword" Placeholder="Password" IsPassword="True"></Entry>
        <Entry x:Name="entryPassword2" Placeholder="Verify Password" IsPassword="True"></Entry>
        <Label x:Name="lblNoUserName" FontSize="Large" Text="Invalid Username" IsVisible="False"></Label>
        <Label x:Name="lblUser" Text="Already a user? Click here to login."></Label>
        <Button x:Name="btnLogin" Text="Login" BackgroundColor="Red" TextColor="Black"></Button>
    </StackLayout>
</ContentPage>